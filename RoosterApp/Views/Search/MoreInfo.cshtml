@using RoosterApp.Models
@model RoosterApp.Models.Les
@{
    List<Les> list = ViewBag.Recurring;
}

<h2>Details</h2>
<div class="panel panel-default">
    <div class="panel-body">
        <table style="width: 100%">
            <tr>
                <td style="width: 20%;font-weight: bold">Vak</td>
                <td id="vakInfo" style="width: 25%">@Model.Vak</td>
                <td style="width: 20%;font-weight: bold">Lokaal</td>
                <td id="lokaalInfo" style="width: 25%">@Model.Lokaal</td>
                <td rowspan="2"><a type="button" href="@Url.Action("MoreInfo","Search",new {id = Model.GetHashCode(), add = true})" class="btn btn-default" style="text-decoration: none">Toevoegen aan agenda</a></td>
            </tr>
            <tr>
                <td style="width: 20%;font-weight: bold">Docent</td>
                <td id="docentInfo" style="width: 25%">@Model.Docent</td>
                <td style="width: 20%;font-weight: bold">Klas</td>
                <td id="klasInfo" style="width: 25%">@Model.Klas</td>
            </tr>
            <tr>
                <td style="width: 20%;font-weight: bold">Aanvang</td>
                <td id="aanvangInfo" style="width: 25%">@Model.StartTijd</td>
                <td style="width: 20%;font-weight: bold">Duur</td>
                <td id="duurInfo" style="width: 25%">@Model.Lengte</td>
            </tr>
        </table>
    </div>
</div>
@Model.Attending
<div class="panel panel-primary">
    <div class="panel-heading clearfix">
        <h4 class="pull-left">Planning</h4>
        <div class="btn-group pull-right">
            <a href="#" class="btn btn-default">Toevoegen aan agenda</a>
        </div>
    </div>
    <div class="panel-body">
        <table style="width: 100%" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Docent
                    </th>
                    <th>
                        Lokaal
                    </th>
                    <th>
                        Aanvang
                    </th>
                    <th>
                        Duur
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in list)
                {
                    <tr data-clickable=true data-vak="@item.Vak" data-klas="@item.Klas" data-docent="@item.Docent" data-lokaal="@item.Lokaal" data-starttijd="@item.StartTijd.ToString("yyyy-MM-dd HH:mm:ss")" data-lengte="@item.Lengte" data-vakid="@item.VakId" data-vakcode="@item.VakCode" data-hash="@item.GetHashCode()">
                        <td>@item.Docent</td>
                        <td>@item.Lokaal</td>
                        <td>@item.StartTijd.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@item.Lengte</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
